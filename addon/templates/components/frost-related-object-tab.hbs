<div
  class="related-object-tab"
  data-test={{hook (concat hook '-object-details-related-object-tab' (if isSelected '-selected' '')) }}>
  {{#frost-related-object-tab-link
      (query-params selectedTabName=(if (not isSelected) name) selectedTabType=(if (not isSelected) type))
      icon=icon.name
      pack=icon.pack
      isSelected=isSelected}}
    {{text}}
  {{/frost-related-object-tab-link}}
</div>

{{#if isSelected}}
  {{to-elsewhere
    named=targetOutlet
    send=(hash
      content=content
      name=name
      type=type)
  }}
{{/if}}