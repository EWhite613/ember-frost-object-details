<div class='object-tab' data-test={{hook (concat hook '-object-tab') selected=isSelected }}>
  <div class='object-tab-divider'></div>
  {{frost-button
    class=(concat 'tab' (if isSelected ' active') (if isDefault ' default'))
    disabled=disabled
    text=text
    onClick=(action 'change')}}
</div>

{{#if isSelected}}
  {{to-elsewhere
    named=targetOutlet
    send=(hash
      content=content
      id=id
      type=type
    )
  }}
{{/if}}