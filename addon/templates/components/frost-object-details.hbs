<div class="view-tabs">
    {{yield}}
  {{#yield-slot 'view-route'}}
    {{yield (block-params (hash
      viewRoute=(component 'frost-view-detail')))}}
  {{/yield-slot}}
</div>
<div class="body">
    <div class="content">
      {{liquid-outlet class='main-container'}}
    </div>
    <div class="related-tabs">

      {{#yield-slot 'related-route'}}
        {{yield (block-params (hash
        relatedRoute=(component 'frost-related-detail'
        persistedRouteName=persistedRouteName defaultRoute=defaultRoute
        parentRouteName=parentRouteName)))}}
      {{/yield-slot}}
    </div>
</div>

